<p id="notice"><%= notice %></p>

<h1>Clockevents</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Detail</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clockevents.each do |clockevent| %>
      <tr>
        <td><%= clockevent.event %></td>
        <td><%= clockevent.detail %></td>
        <td><%= clockevent.user.username %></td>
        <td><%= link_to 'Show', clockevent %></td>
        <% if current_user && current_user.admin %>
        <td><%= link_to 'Edit', edit_clockevent_path(clockevent) %></td>
        <td><%= link_to 'Destroy', clockevent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Clockevent', new_clockevent_path %>
<%= link_to 'Sign Out' , destroy_user_session_path, method: :delete %>
